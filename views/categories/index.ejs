<!-- views/categories/index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Car Category List</title>
  </head>
  <body>
    <h1>Car Categories</h1>

    <p><a href="/categories/create">Create New Category</a></p>

    <% if (categories && categories.length > 0) { %>
    <ul>
      <% categories.forEach(category => { %>
      <li>
        <a href="/categories/<%= category.category_id %>"
          ><%= category.name %></a
        >
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No categories found.</p>
    <% } %>
  </body>
</html>
